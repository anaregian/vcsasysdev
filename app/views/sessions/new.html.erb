 <h1 align="center">Log In</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |p| %>
<div class="form-group">
	<div class="col-md-8 col-md-offset-2">
		<%= p.email_field :email, class: "form-control", placeholder: "E-mail address" %>
	</div>
</div>
<div class="form-group">
	<div class="col-md-8 col-md-offset-2">
		<%= p.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
	</div>
</div>
<div class="form-group">
	<div class="col-md-offset-2 col-md-12">
		<%= link_to "Forgot Password?", new_password_reset_path, class: "btn btn-info btn-sm" %>
	</div>
</div>
<div class="form-group">
	<div class="col-md-offset-2 col-md-12">
		<%= p.submit "Log In", class: "btn btn-primary btn-lg" %>
		<%= link_to "Cancel", root_path, class: "btn btn-danger btn-lg" %>
	</div>
</div>
<% end %>

<!--Contains the form partial-->
<!--Used for the new and edit actions-->
<%= render 'shared/errors', obj: @estimation %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@estimation, :html => {class: "form-horizontal", role: "form"}) do |e| %>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
				<%= e.number_field :estimate, class: "form-control", placeholder: "Estmated Amount", step: :any %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-12">
				<%= e.submit class: "btn btn-primary btn-lg" %>
				<%= link_to "Cancel", positions_path, class: "btn btn-danger btn-lg" %>
			</div>
		</div>
		<% end %>
	</div>
</div>

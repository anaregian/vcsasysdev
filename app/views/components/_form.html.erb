<!--Contains the form partial-->
<!--Used for the new and edit actions-->
<%= render 'shared/errors', obj: @component %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@component, :html => {class: "form-horizontal", role: "form"}) do |a| %>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
				<%= a.text_field :component_name, class: "form-control", placeholder: "Component Name", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
				<%= a.number_field :cost, class: "form-control", placeholder: "cost", step: :any %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
				<%= a.text_area :description, class: "form-control", placeholder: "Description (optional)", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2 dropdown-toggle">
				<%= a.collection_select :activity_id, Activity.all, :id, :activity_name, {prompt: "Activity", :selected => @component.activity_id.to_i}, {class: "btn btn-default dropdown-toggle"}%>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-12">
				<%= a.submit class: "btn btn-primary btn-lg" %>
				<%= link_to "Cancel", components_path, class: "btn btn-danger btn-lg" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
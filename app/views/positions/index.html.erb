<!--Displays the index page for the positions-->
<h1 align="center">Listing all positions</h1>

<div align="center" class="row">
	<div class="col-md-12">
		<%= link_to "Create new position", new_position_path, class: "btn btn-s btn-primary btn-top" %>
	</div>
</div>
<table class="table table-condensed table-striped bg-white">
	<tr>
		<th>Position</th>
		<th>Allocated Money</th>
		<th>Amount Spent</th>
		<th>Amount Left</th>
		<th>Budget Progression</th>
		<th>Actions</th>
	</tr>
	<!--Goes through each row in the DB and displays them in the table-->
	<% @positions.each do |p| %>
	<tr>
		<td><%= link_to p.name, position_path(p) %></td>
		<td><%= p.allocated_money %></td>
		<td></td>
		<td></td>
		<td></td>
		<td><%= link_to 'Edit', edit_position_path(p), class: "btn btn-warning btn-xs" %>
			<%= link_to 'Delete', position_path(p), method: :delete, data: {confirm: "Delete position?"}, class: "btn btn-danger btn-xs" %></td>
	</tr>
	<% end %>
</table>
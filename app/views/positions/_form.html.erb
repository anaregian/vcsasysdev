<!--Contains the form partial-->
<!--Used for the new and edit actions-->
<%= render 'shared/errors', obj: @position %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@position, :html => {class: "form-horizontal", role: "form"}) do |p| %>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
				<%= p.text_field :name, class: "form-control", placeholder: "Position Name", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
				<%= p.number_field :allocated_money, class: "form-control", placeholder: "Allocated Money", step: :any %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-12">
				<%= p.submit class: "btn btn-primary btn-lg" %>
				<%= link_to "Cancel", positions_path, class: "btn btn-danger btn-lg" %>
			</div>
		</div>
		<% end %>
	</div>
</div>

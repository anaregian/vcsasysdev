<!--Displays the index page for the comments-->
<h1 align="center">Listing all Comments</h1>

<div align="center" class="row">
	<div class="col-md-12">
		<%= link_to "Add new comment", new_comment_path, class: "btn btn-s btn-primary btn-top" %>
	</div>
</div>
<table class="table table-condensed bg-white sortable">
	<tr>
		<th>Creator</th>
		<th>Date</th>
		<th>Description</th>
	</tr>
	<!--Goes through each row in the DB and displays them in the table-->
	<% @comment.each do |i| %>
	<tr>
		<td><%= i.username %></td>
		<td><%= i.updated_at.localtime.to_formatted_s(:long) %></td>
		<td><%= i.description %></td>
		<td><%= link_to 'Edit', edit_comment_path(i), class: "btn btn-warning btn-xs" %>
			<%= link_to 'Delete', comment_path(i), method: :delete, data: {confirm: "Delete comment?"}, class: "btn btn-danger btn-xs" %></td>
	</tr>
	<% end %>
</table>

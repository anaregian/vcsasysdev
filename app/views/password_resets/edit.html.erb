<%= render 'shared/errors', obj: @user %>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}, url: password_reset_path(params[:id])) do |p| %>
  <div class="form-group">
    <div class="col-md-8 col-md-offset-2">
      <%= p.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
  	<div class="col-md-offset-2 col-md-12">
  		<%= p.submit "Update Password", class: "btn btn-primary btn-lg" %>
  	</div>
  </div>
<% end %>
